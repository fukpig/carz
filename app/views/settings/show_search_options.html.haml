.box-body.table-responsive
  %a{:href => new_search_option_path}
    %button.btn.btn-info New option
  %br/
  %table#example2.table.table-bordered.table-striped
    %thead
      %tr
        %th Option name
        %th Option field
        %th Optoin values
        %th Actions
    %tbody
      - @options.each do |search_option|
        %tr
          %td= search_option.option_name
          %td= search_option.option_field
          %td= search_option.values
          %td 
            = link_to 'Edit', edit_search_option_path(search_option)
            = link_to "Delete", delete_search_option_path(search_option), method: :delete, data: { confirm: 'Are you certain you want to delete this?' }