= render 'search'

.box-body.table-responsive
  %br/
  %table#example2.table.table-bordered.table-striped
    %thead
      %tr
        %th Make
        %th Model
        %th Manufacture year
        %th Transmission
        %th Cylinders
        %th Seats
        %th Fuel Type
        %th Body
        %th Colour
        %th Actions
    %tbody
      - @searchs.each do |snf|
        - search = JSON.parse snf.search_params
        %tr
          %td= search["make"]
          %td= search["model"]
          %td= search["manu_year_from"] + '-' + search["manu_year_to"]
          %td= search["gearbox"]
          %td= search["cylinders"]
          %td= search["seats"]
          %td= search["fuel_type"]
          %td= search["body"]
          %td= search["body_colour"]
          %td
            = link_to 'Edit', edit_setandforget_path(snf)
            = link_to t('.destroy', :default => t("helpers.links.destroy")), setandforget_path(snf), :method => :delete, :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-mini btn-danger'

%script{:src => "//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js", :type => "text/javascript"}
%script{:src => "//code.jquery.com/ui/1.11.1/jquery-ui.min.js", :type => "text/javascript"}
%script{:src => "//cdnjs.cloudflare.com/ajax/libs/raphael/2.1.0/raphael-min.js"}

= javascript_include_tag "plugins/datatables/jquery.dataTables.js", "data-turbolinks-track" => true
= javascript_include_tag "plugins/datatables/dataTables.bootstrap.js", "data-turbolinks-track" => true