= form_for @plan do |f|
  - if @plan.errors.any?
    #error_explanation
      %h2= "#{pluralize(@plan.errors.count, "error")} prohibited this car from being saved:"
      %ul
        - @plan.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :Name
    = f.text_field :name 
  .field
    = f.label :Description
    = f.text_field :description 
  .field
    = f.label :month_price
    = f.text_field :month_price
  .field
    = f.label :year_price
    = f.text_field :year_price
  .actions
    = f.submit 'Save'