.box-body.table-responsive
  %a{:href => new_admin_cars_make_path}
    %button.btn.btn-info New make
  %br/
  %table#example2.table.table-bordered.table-striped
    %thead
      %tr
        %th Make
        %th Actions
    %tbody
      - @makes.each do |make|
        %tr
          %td= make.name
          %td 
            = link_to 'Series', admin_cars_make_car_series_index_path(make)
            = link_to 'Models', admin_cars_make_car_models_path(make)
            = link_to 'Edit', edit_admin_cars_make_path(make)
            = link_to "Delete", admin_cars_make_path(make), method: :delete, data: { confirm: 'Are you certain you want to delete this?' }

%script{:src => "//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js", :type => "text/javascript"}
%script{:src => "//code.jquery.com/ui/1.11.1/jquery-ui.min.js", :type => "text/javascript"}
%script{:src => "//cdnjs.cloudflare.com/ajax/libs/raphael/2.1.0/raphael-min.js"}