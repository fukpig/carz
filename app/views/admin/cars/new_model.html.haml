.example-modal
  .modal
    .modal-dialog
      .modal-content
        .modal-header
          %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
            %span{"aria-hidden" => "true"} Ã—
          %h4.modal-title Modal Default
        .modal-body
          .modal-container
        .modal-footer
          %button.btn.btn-default.pull-left{"data-dismiss" => "modal", :type => "button"} Close
          %button.btn.btn-primary{:type => "button"} Save changes
      / /.modal-content
    / /.modal-dialog
  / /.modal
:javascript
  $(".series").on("click", function(){
    car_id = $("#car_id").val();
    $.ajax({
      url: '/admin/cars/'+car_id+'/new_series',
      data: {
        format: 'html'
      },
      error: function() {
        $('#info').html('<p>An error has occurred</p>');
      },
      dataType: 'html',
      success: function(data) {
        $('.modal-container').empty().html(data);
      },
      type: 'GET'
   });

  })