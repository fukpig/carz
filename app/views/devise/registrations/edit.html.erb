<h2>Edit <%= resource_name.to_s.humanize %></h2>

<% flash.each do |name, msg| -%>
      <%= content_tag :div, msg, class: name %>
    <% end -%>

<%= form_for(resource, url: edit_user_registration_path, html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
   <div class="field">
    <%= f.label :phone %><br />
    <%= f.text_field :phone %>
  </div>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :company_name %><br />
    <%= f.text_field :company_name %>
  </div>

  <div class="field">
    <%= f.label :company_phone %><br />
    <%= f.text_field :company_phone %>
  </div>
  
  <div class="field">
    <%= f.label :dealer_number %><br />
    <%= f.text_field :dealer_number %>
  </div>
  
  <div class="field">
    <%= f.label :dealer_solution_number %><br />
    <%= f.text_field :dealer_solution_number %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<%= link_to "Back", :back %>
