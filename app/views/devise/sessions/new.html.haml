%body.bg-black
  #login-box.form-box
    .header Sign In
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .body.bg-gray
        .form-group
          = f.email_field :email,  :placeholder => "Email",  :class => "form-control"
        .form-group
          = f.password_field :password, autocomplete: "off", :placeholder => "Password",  :class => "form-control"
        .form-group
          = f.check_box :remember_me
          Remember me
      .footer
        = f.submit "Sign in", :class => "btn bg-olive btn-block"
        %p
          = link_to "I forgot my password", new_user_password_path
        = link_to "Register", new_user_registration_path, :class => "text-center"
    .margin.text-center
      %span Sign in using social networks
      %br/
      %a{:href => user_omniauth_authorize_path(:facebook)}
        %button.btn.bg-light-blue.btn-circle
          %i.fa.fa-facebook